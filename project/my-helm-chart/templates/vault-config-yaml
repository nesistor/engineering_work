apiVersion: v1
kind: ConfigMap
metadata:
  name: vault-agent-config
  namespace: microservices-app
data:
  config.hcl: |
    exit_after_auth = false
    pid_file = "/tmp/vault-agent.pid"

    # Vault server address
    vault {
      address = "http://microservices-vault-service.microservices-app.svc.cluster.local:8200"
    }

    # Secret to be injected
    auto_auth {
      method "kubernetes" {
        mount_path = "auth/kubernetes"
        config = {
          role = "my-app-role"
        }
      }

      sink "file" {
        path = "/vault/secrets/token"
      }
    }

    # Template for injecting secrets
    template {
      source = "/vault/secrets/policies"
      destination = "/vault/secrets/policies"
    }
