pipeline {
    agent any
    environment {
        // Zmień na lokalny adres IP lub hostname twojego rejestru
        DOCKER_REGISTRY = "localhost:5000" // Przykład lokalnego rejestru
        KUBECTL_PATH = "/usr/local/bin/kubectl"
        HELM_PATH = "/usr/local/bin/helm"  
        KUBECONFIG = credentials('K8S_CONFIG')
    }
    stages {
        stage('Build Applications') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'admin-service', 'mail-service', 'logger-service']
                    services.each { service ->
                        dir("../${service}") {
                            // Kompilacja aplikacji przy użyciu Makefile
                            sh "make build"
                        }
                    }
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        dir("../${service}") {
                            // Budowanie obrazów Docker
                            sh "docker build -t ${DOCKER_REGISTRY}/${service}:latest -f ${service}.dockerfile ."
                        }
                    }
                }
            }
        }
        
        stage('Push Docker Images') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        // Wypychanie obrazów do lokalnego rejestru
                        sh "docker push ${DOCKER_REGISTRY}/${service}:latest"
                    }
                }
            }
        }
        
        stage('Deploy with Helm') {
            steps {
                script {
                    // Wdrożenie aplikacji za pomocą Helm
                    sh "${HELM_PATH} upgrade --install my-app ./microservices-chart --namespace your-namespace --set image.tag=latest"
                }
            }
        }
    }
}
