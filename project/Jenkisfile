pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = "docker.io/yourusername"
        KUBECTL_PATH = "/usr/local/bin/kubectl"  // Ścieżka do narzędzia kubectl na Jenkinsie
        KUBECONFIG = credentials('K8S_CONFIG')   // Kredencje Kubernetes (plik kubeconfig)
        VAULT_TOKEN = credentials('VAULT_TOKEN') // Token do autoryzacji Vaulta
    }

    stages {
        stage('Build') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        dir("../${service}") {
                            sh "docker build -t ${DOCKER_REGISTRY}/${service}:latest -f ${service}.dockerfile ."
                        }
                    }
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        sh "docker push ${DOCKER_REGISTRY}/${service}:latest"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Aplikacja konfiguracji (ConfigMaps, Secrets) oraz deploymentów na Kubernetes
                    sh "${KUBECTL_PATH} apply -f k8s/configmaps"
                    sh "${KUBECTL_PATH} apply -f k8s/secrets"
                    sh "${KUBECTL_PATH} apply -f k8s/volumes"
                    sh "${KUBECTL_PATH} apply -f k8s/deployments"
                    sh "${KUBECTL_PATH} apply -f k8s/services"
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()
        }
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
