pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "docker.io/your-repo"
        KUBECTL_PATH = "/usr/local/bin/kubectl"
        HELM_PATH = "/usr/local/bin/helm"  
        KUBECONFIG = credentials('K8S_CONFIG')
    }
    stages {
        stage('Build') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        dir("../${service}") {
                            sh "docker build -t ${DOCKER_REGISTRY}/${service}:latest -f ${service}.dockerfile ."
                        }
                    }
                }
            }
        }
        
        stage('Push') {
            steps {
                script {
                    def services = ['auth-service', 'user-service', 'logger-service', 'admin-service', 'mailer-service']
                    services.each { service ->
                        sh "docker push ${DOCKER_REGISTRY}/${service}:latest"
                    }
                }
            }
        }
        
        stage('Deploy with Helm') {
            steps {
                script {
                    sh "${HELM_PATH} upgrade --install my-app ./my-app-chart --namespace your-namespace"
                }
            }
        }
    }
}
